{
  "mcpServers": {
    "google-cloud": {
      "command": "npx",
      "args": ["-y", "@google-cloud/mcp-server-gcp"],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": ".gcp/service-account-key.json",
        "GOOGLE_CLOUD_PROJECT": "your-project-id"
      }
    },
    "cloud-run": {
      "command": "npx",
      "args": ["-y", "https://github.com/GoogleCloudPlatform/cloud-run-mcp"],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": ".gcp/service-account-key.json",
        "GOOGLE_CLOUD_PROJECT": "your-project-id"
      }
    }
  }
}